{
  "openapi": "3.0.2",
  "servers": [
    {
      "url": "http://localhost:{port}/api",
      "description": "development server",
      "variables": {
        "port": { "default": "5000" }
      }
    },
    {
      "url": "http://139.180.196.41:9090/api",
      "description": "production server"
    }
  ],
  "info": {
    "version": "1.7.3",
    "title": "Quan ly thu chi api",
    "description": "API doc "
  },
  "tags": [
    {
      "name": "Auth",
      "description": "User authentication"
    },
    {
      "name": "Account",
      "description": "Operations about account"
    },
    {
      "name": "Wallet",
      "description": "Operations about wallte"
    },
    {
      "name": "Transaction",
      "description": "Operations about transaction"
    },
    {
      "name": "Budget",
      "description": "Operations about budget"
    },
    {
      "name": "Wallet Type",
      "description": "Operations about wallet type"
    },
    {
      "name": "Transaction Type",
      "description": "Operations about transaction type"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "user registeration",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              },
              "examples": {
                "account": {
                  "value": {
                    "email": "admin@gmail.com",
                    "username": "l3azh",
                    "password": "12345678",
                    "phone": "0123456789"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "user login",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              },
              "examples": {
                "test": {
                  "value": {
                    "email": "admin@gmail.com",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      }
    },
    "/account/me": {
      "get": {
        "tags": ["Account"],
        "summary": "get current auth user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/update": {
      "post": {
        "tags": ["Account"],
        "summary": "udpate user's information",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              },
              "examples": {
                "update account": {
                  "value": {
                    "password": "naruto99",
                    "username": "l3azh"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/me-all-wallet": {
      "get": {
        "tags": ["Wallet"],
        "summary": "get current user's list wallet",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/account/wallet/create-wallet": {
      "post": {
        "tags": ["Wallet"],
        "summary": "create new wallet",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              },
              "examples": {
                "create new wallet": {
                  "value": {
                    "amount": "700000",
                    "idWalletType": "2"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/delete-wallet/{type}": {
      "delete": {
        "tags": ["Wallet"],
        "summary": "delete wallet",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "wallet type from mysql",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/update-wallet/{type}": {
      "put": {
        "tags": ["Wallet"],
        "summary": "update wallet",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "wallet type from mysql",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Wallet"
              },
              "examples": {
                "update wallet": {
                  "value": {
                    "amount": "700077"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/transaction/all-transaction/{idWallet}": {
      "get": {
        "tags": ["Transaction"],
        "summary": "get all transaction of wallet with id wallet",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "idWallet",
            "in": "path",
            "description": "idWallet from table wallet mysql ",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/NotFound"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/transaction/info-transaction/{idWallet}/{idWalletType}": {
      "get": {
        "tags": ["Transaction"],
        "summary": "get list transaction of wallet with id wallet and id wallet type",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "idWallet",
            "in": "path",
            "description": "idWallet from table wallet mysql ",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "idWalletType",
            "in": "path",
            "description": "idWalletType from table WalletType mysql ",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/NotFound"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/transaction/create-transaction": {
      "post": {
        "tags": ["Transaction"],
        "summary": "create new transaction of wallet",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              },
              "examples": {
                "new wallet": {
                  "value": {
                    "idWallet": "12",
                    "idTransType": "7",
                    "amount": "30000"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/NotFound"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/account/wallet/transaction/delete-transaction/{idTransaction}": {
      "delete": {
        "tags": ["Transaction"],
        "summary": "delete transaction of wallet",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "idTransaction",
            "in": "path",
            "description": "idTransaction from table transaction mysql ",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "OK": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": true,
                "code": 200,
                "data": {}
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "resource not found",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 404,
                "data": { "message": "" }
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "bad request",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 400,
                "data": { "message": "" }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 401,
                "data": { "message": "" }
              }
            }
          }
        }
      },
      "Forbidden": {
        "description": "no permission to access",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 403,
                "data": { "message": "" }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "Account": {
        "type": "object",
        "required": ["email", "username", "password", "phone"],
        "properties": {
          "email": {
            "type": "string",
            "example": "l3azh@gmail.com",
            "uniqueItems": true
          },
          "username": {
            "type": "string",
            "example": "l3azh"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 6
          },
          "phone": {
            "type": "string"
          },
          "joindate": {
            "type": "string"
          }
        }
      },
      "Wallet": {
        "type": "object",
        "required": ["idWallet", "amount", "WalletTypeIdWalletType"],
        "properties": {
          "idWallet": {
            "type": "number",
            "uniqueItems": true
          },
          "amount": {
            "type": "number"
          },
          "AccountEmail": {
            "type": "string",
            "$ref": "#/components/schemas/Account"
          },
          "WalletTypeIdWalletType": {
            "type": "number",
            "$ref": "#/components/schemas/WalletType"
          }
        }
      },
      "WalletType": {
        "type": "object",
        "required": ["idWalletType", "type"],
        "properties": {
          "idWalletType": {
            "type": "number",
            "uniqueItems": true
          },
          "type": {
            "type": "string"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "idTransaction": {
            "type": "number",
            "uniqueItems": true
          },
          "WalletIdWallet": {
            "type": "number",
            "$ref": "#/components/schemas/Wallet"
          },
          "TransTypeIdTransType": {
            "type": "number",
            "$ref": "#/components/schemas/TransactionType"
          },
          "amount": {
            "type": "number"
          },
          "note": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      },
      "TransactionType": {
        "type": "object",
        "properties": {
          "idTransType": {
            "type": "number",
            "uniqueItems": true
          },
          "type": {
            "type": "string",
            "enum": ["thu", "chi"]
          },
          "categoryName": {
            "type": "string",
            "example": "do uong, tien nha, tien nuoc"
          }
        }
      },
      "Budget": {
        "type": "object",
        "properties": {
          "idBudget": {
            "type": "number",
            "uniqueItems": true
          },
          "amountBudget": {
            "type": "number"
          },
          "note": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "WalletIdWallet": {
            "type": "number",
            "$ref": "#/components/schemas/Wallet"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
